@model Sixeyed.MessagingPoweredFrontEnd.Web.Models.MailModel

@{
    ViewBag.Title = "Noticeboard";
}

<div class="row">
    <div class="col-md-6">
        <h3>Noticeboard</h3>
        <hr />
        <div id="mailBox">
        </div>
    </div>


    <div class="col-md-6">
        <h3>Send New Mail</h3>
        <hr />

        <div class="well well-lg">

            <div class="input-group input-group-lg">
                <span class="input-group-addon" id="sizing-addon1">@@</span>
                <input type="text" class="form-control" placeholder="Username" id="Sender" name="Sender" value='@Model.Sender' aria-describedby="sizing-addon1">
            </div>

            <div class="input-group input-group-lg">
                <span class="input-group-addon" id="sizing-addon1">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                </span>
                <input type="text" class="form-control" placeholder="Message" id="Content" name="Content" aria-describedby="sizing-addon1">
            </div>

            <div>
                <button type="button" class="btn btn-success" onclick="send();" >Send</button>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.signalR-2.4.1.js"></script>
<script src="~/signalr/hubs"></script>
<script src="~/Scripts/toastr.min.js"></script>

<script src="~/Scripts/app/noticeboard.js"></script>
