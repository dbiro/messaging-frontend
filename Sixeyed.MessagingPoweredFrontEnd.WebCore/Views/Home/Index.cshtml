@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <div class="row">
        <div class="col-md-6">
            <h3>Noticeboard</h3>
            <hr />
            <div id="mailBox">
            </div>
        </div>


        <div class="col-md-6">
            <h3>Send New Mail</h3>
            <hr />

            <div class="well well-lg">

                <div class="input-group input-group-lg">
                    <span class="input-group-addon" id="sizing-addon1">@@</span>
                    <input type="text" class="form-control" placeholder="Username" id="Sender" name="Sender" value='@Model.Sender' aria-describedby="sizing-addon1">
                </div>

                <div class="input-group input-group-lg">
                    <span class="input-group-addon" id="sizing-addon1">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    </span>
                    <input type="text" class="form-control" placeholder="Message" id="Content" name="Content" aria-describedby="sizing-addon1">
                </div>

                <div>
                    <button id="btnSend" type="button" class="btn btn-success">Send</button>
                </div>
            </div>
        </div>
    </div>
</div>
